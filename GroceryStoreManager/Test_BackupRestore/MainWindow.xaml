<Window x:Class="Test_BackupRestore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test_BackupRestore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Label Content="Backup Path:" Canvas.Left="10" Canvas.Top="10"/>
        <TextBox x:Name="txtBackupPath" Canvas.Left="100" Canvas.Top="10" Width="200"/>
        <Button Content="Select..." Click="btnSelectBackupPath_Click" Canvas.Left="310" Canvas.Top="10"/>
        <Button Content="Backup" Click="btnBackup_Click" Canvas.Left="370" Canvas.Top="10"/>

        <Label Content="Restore Path:" Canvas.Left="10" Canvas.Top="50"/>
        <TextBox x:Name="txtRestorePath" Canvas.Left="100" Canvas.Top="50" Width="200"/>
        <Button Content="Select..." Click="btnSelectRestorePath_Click" Canvas.Left="310" Canvas.Top="50"/>
        <Button Content="Restore" Click="btnRestore_Click" Canvas.Left="370" Canvas.Top="50"/>
    </Canvas>
</Window>
