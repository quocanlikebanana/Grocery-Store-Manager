<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GroceryStore.MainApp">

    <Style TargetType="local2:MyComboBox" xmlns:local2="using:GroceryStore.MainApp.CustomControls">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:MyComboBox">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local2:Separator" xmlns:local2="using:GroceryStore.MainApp.CustomControls">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:Separator">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
